{
  "name": "Bot alerts",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "See http://bit.ly/2dwTbkG for installation help",
  "homepage_url": "https://github.com/megatolya/bot-alerts/blob/master/README.md",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  },
  "options_ui": {
      "page": "src/options.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "src/inject.css"
      ],
      "js": [
        "src/inject.js"
      ]
    }
  ]
}
